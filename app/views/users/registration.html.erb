<h1>Sign Up</h1>

<form action="/insert_user_record">
  <label for="username">Username</label>
  <input id="username" type="text" name="input_username" placeholder="Provide a username">
  <label for="password">Password</label>
  <input id="password" type="password" name="input_password" placeholder="Enter a password">
  <label for="password_confirmation">Confirm password</label>
  <input id="password_confirmation" type="password" name="input_password_confirmation" placeholder="Confirm your password">

  <button>Register</button>
</form>
